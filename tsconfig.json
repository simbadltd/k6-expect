{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6"],
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
  },
  "include": [
    "./src/*"
  ]
}